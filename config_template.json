{
    "model_path": "./models/gemma-3-27b-it",
    "tokenizer_path": "./models/gemma-3-27b-it/tokenizer.json",
    "server_port": 8080,
    
    "_comment_batch": "批处理配置",
    "max_batch_size": 16,
    "batch_timeout_ms": 10,
    "dynamic_batching": true,
    
    "_comment_memory": "内存管理配置",
    "max_context_length": 131072,
    "gpu_memory_gb": 48,
    "cpu_memory_gb": 128,
    "nvme_cache_path": "./cache/nvme",
    "memory_pool_size": 1024,
    
    "_comment_performance": "性能优化配置",
    "num_streams": 4,
    "enable_cuda_graph": true,
    "enable_hmt": true,
    "enable_quantization": true,
    "enable_kernel_fusion": true,
    
    "_comment_hmt": "HMT分层内存配置", 
    "hmt_gpu_threshold": 0.85,
    "hmt_cpu_threshold": 0.90,
    "hmt_eviction_policy": "a2cr",
    "hmt_decay_factor": 0.05,
    
    "_comment_tensorrt": "TensorRT配置",
    "trt_precision": "fp16",
    "trt_max_workspace_gb": 4,
    "trt_enable_sparse": true,
    "trt_enable_refit": true,
    
    "_comment_multimodal": "多模态配置",
    "image_resolution": 896,
    "max_images_per_request": 8,
    "image_preprocessing_threads": 4,
    
    "_comment_logging": "日志配置",
    "log_level": "info",
    "stats_interval_seconds": 10,
    "enable_performance_logging": true,
    
    "_comment_limits": "资源限制",
    "max_concurrent_requests": 128,
    "request_timeout_seconds": 30,
    "max_tokens_per_request": 4096
} 